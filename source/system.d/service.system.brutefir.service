[Unit]
Description=BruteFIR - FFT Convolver
After=sound.target

[Service]
ExecStart=/storage/.kodi/addons/service.system.brutefir/usr/bin/brutefir
Restart=always
RestartSec=2
Environment="LD_LIBRARY_PATH=/usr/lib:/usr/lib/pulseaudio:/storage/.kodi/addons/service.system.fftw3:/storage/.kodi/addons/service.system.fftw3f"

[Install]
WantedBy=kodi.target
